<style lang="scss">
/* ================= MOBILE ================= */
.header-relative {
  position: relative;
  z-index: 100;
  background-color: #015aa6;
  padding: 1em;

  display: flex;
  align-items: center;

  .img-logo {
    width: 100%;

    img {
      width: 4.8em;
      display: block;
    }
  }

  .item-menu {
    display: none;
  }

  .item-menu-button {
    margin-left: auto;
    display: flex;
    align-items: center;
  }
}

/* ================= DESKTOP ================= */
@media (min-width: 920px) {
  .header-relative {
    max-width: 1530px;
    margin: auto;
    padding: 2em;

    /* apaga mobile */
    .img-logo {
      display: none;
    }

    .item-menu-button {
      display: none; /* ðŸ”¥ ESTO ES LO QUE FALTABA */
    }

    /* enciende desktop */
    .item-menu {
      display: flex;
      align-items: center;
      width: 100%;
    }

    /* columnas simÃ©tricas */
    .menu-left,
    .menu-right {
      flex: 1;
      display: flex;
    }

    .menu-left {
      justify-content: flex-end;
    }

    .menu-right {
      justify-content: flex-start;
    }

    .menu-left ul,
    .menu-right ul {
      list-style: none;
      display: flex;
      align-items: center;
      gap: 3em;
      padding: 0;
      margin: 0;

      li {
        position: relative;

        a {
          text-decoration: none;
          color: #fff;
          font-size: 1.15em;
          display: inline-flex;
          align-items: center;
          white-space: nowrap;
        }

        .anchor-icon {
          display: inline-flex;
          align-items: center;
          gap: 0.3em;
          padding: 0.6em 1.3em;
          border-radius: 6em;
          font-weight: 600;
          background-color: #fff;
          color: #000;
        }
      }
    }

    /* LOGO */
    .menu-logo {
      flex-shrink: 0;
      margin: 0 2.5em;
      display: flex;
      align-items: center;
      justify-content: center;

      img {
        width: 6.5em;
        display: block;
      }
    }

    /* SUBMENU */
    .has-submenu {
      .submenu {
        position: absolute;
        top: 120%;
        left: 0;
        display: none;
        background-color: #015aa6;
        min-width: 190px;
        padding: 0.5em 0;
        border-radius: 0.7em;
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.35);
        z-index: 999;
      }

      &:hover {
        .submenu {
          display: block;
        }
      }
    }
  }
}
</style>
